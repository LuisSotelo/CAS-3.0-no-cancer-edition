<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
<link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.css" rel="stylesheet" />
<link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.css" rel="stylesheet" />
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.2/moment.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>
<link href="~/css/inputs.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-9">
        <h2>Informacion Personal</h2>
        <br />
        <!-- Custom Tabs -->
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#Datos" data-toggle="tab">Datos Generales</a></li>
                <li><a href="#Parentesco" data-toggle="tab"> Parentescos</a></li>
                <li><a href="#Domicilio" data-toggle="tab">Domicilio</a></li>
                <li><a href="#Contacto" data-toggle="tab">Contacto</a></li>
                <li class="pull-right"><a href="#" class="text-muted"><i class="fa fa-gear"></i></a></li>
            </ul>
            <div class="tab-content">
                <!-- Comienza el contenido del tab-->

                <div class="tab-pane active" id="Datos">
                    <!--Es el primer tab-->
                    <div class="row" style="background-color:#ffffff; height:625px;width:auto; margin:auto">
                        <br /><br />

                        <div class="form-group col-md-5">
                            <input type="text" id="nombre" class="form-control" required value="@ViewData[" CurrentFilter"]" />
                            <label class="form-control-placeholder" for="nombre">Nombre</label>
                        </div>

                        <div class="form-group col-md-5">
                            <input type="text" id="ApellidoPaterno" class="form-control" required value="@ViewData[" CurrentFilter"]" />
                            <label class="form-control-placeholder" for="ApellidoPaterno">Apellido Paterno</label>

                        </div>
                        <br /><br /><br /><br />

                        <div class="form-group  col-md-5">
                            <input type="text" id="ApellidoMaterno" class="form-control" required />
                            <label class="form-control-placeholder" for="ApellidoMaterno">Apellido Materno</label>
                        </div>
                        <div class="form-group  col-md-2">
                            <input type="text" id="Edad" class="form-control" required />
                            <label class="form-control-placeholder" for="Edad">Edad</label>
                        </div>
                        <div class="form-group col-md-3">
                            <input type="text" class="form-control" id="curp" value="@ViewData[" CurrentFilter"]" required />
                            <label class="form-control-placeholder" for="curp">Curp</label>
                        </div>
                        <br /><br /><br /><br />

                        <div class=" form-group col-md-3">
                            <label style="padding-left:15px">Genero</label>
                            <select>
                                <option value="0">Seleccione</option>
                                <option value="1">Masculino</option>
                                <option value="2">Femenino</option>
                            </select>
                        </div>
                        <!-- Date -->
                        <div class="col-md-3">

                            <label style="padding-left:15px">Fecha de Nacimiento</label>
                            <div class="container" style="width:250%; padding-left:5px">

                                <div class='col-sm-5'>
                                    <div class="form-group">
                                        <div class='input-group date' id='datetimepicker1'>
                                            <input type='text' class="form-control" />
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker1').datetimepicker();
                                    });
                                </script>
                            </div>
                        </div>

                    </div>
                    <!--Termina el primer tab-->
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="Parentesco">
                    <div class="row" style="background-color:#ffffff; height:625px;width:auto; margin:auto">
                        <table class="table-borderless" style="padding:10px 10px 10px 10px">
                            <tr>
                                <td width="33%"></td>
                                <td width="33%"></td>
                                <td></td>
                            </tr>
                        </table>

                        <table>
                            <tr>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="Domicilio">
                    <div class="row" style="background-color:#ffffff; height:625px;width:auto; margin:auto">

                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" id="curp" required />
                            <label class="form-control-placeholder" for="curp">Curp</label>
                        </div>

                    </div>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="Contacto">
                    <div class="row" style="background-color:#ffffff; height:625px;width:auto; margin:auto">
                        @using (Html.BeginForm("GuardarContacto", "Persona", FormMethod.Post))
                        {<br />
                            <table class="table-borderless" style="width:100%; margin:auto">
                                <!--PRIMERA LINEA DE LA TABLA-->
                                <tr>

                                    <td width="40%">
                                        <br />
                                        <label>Telefono</label>
                                        <br />
                                        <input type="text" style="WIDTH:100%;border-radius:5px" placeholder="Telefono de casa" name="Telefono" value="@ViewData[" CurrentFilter"]" />

                                    </td>
                                    <td width="20%"></td>

                                    <td width="40%">
                                        <div class="form-group">

                                            <input type="text" class="form-control" style="WIDTH:100%;border-radius:5px" id="celular" required value="@ViewData[" CurrentFilter"] " />
                                            <label class="form-control-placeholder" for="celular">Celular</label>
                                        </div>

                                    </td>


                                </tr>
                                <!--SEGUNDA FILA DE LA TABLA-->
                                <tr>
                                    <td>
                                        <br />
                                        <label>Correo Electronico</label>
                                        <br />
                                        <input type="text" style="WIDTH:100%;border-radius:5px" placeholder="Email" name="Email" value="@ViewData[" CurrentFilter"]" />

                                    </td>
                                    <td></td>
                                    <td>
                                        <br />
                                        <label>Número de Referencia</label>
                                        <br />
                                        <input type="text" style="WIDTH:100%;border-radius:5px" placeholder="Referencia" name="referencia" value="@ViewData[" CurrentFilter"]" />

                                    </td>
                                </tr>
                                <!--TERCER LINEA DE LA TABLA-->
                                <tr>
                                    <td></td>
                                    <td>
                                        <br />
                                        <br />
                                        <br />

                                    </td>
                                </tr>
                            </table>

                            <input type="text" style="WIDTH:100%;border-radius:5px; display:none" name="IdUsuario" value="1" />

                        }
                    </div>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-block btn-primary col-md-3">Guardar</button>
                </div>
             
            </div>
       
            <!-- /.tab-content -->
        </div>
    
        <!-- nav-tabs-custom -->
    </div>

    <!-- /.col -->
</div>