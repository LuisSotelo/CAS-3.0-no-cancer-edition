<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/Scripts/fullcalendar.min.css" />
  

</head>
<div class="row" style="background-color:#FFFFFF; height: 50px;">
    <div class="col-md-4" style="background-color: #783377;">
        <h2 class="" style="margin: 10px 0 10px 0 !important;  color: rgb(255, 255, 255) !important;">Recepcion</h2>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-2 text-center">
        @using (Html.BeginForm("EditarDatosPersona", "Recepcion", FormMethod.Post))
        {
            <button type="submit" class="btn btn-success" title="Action description">Nuevo Usuario</button>
        }
    </div>
</div>
<div class="row" style="background-color:#F4F7F9; height: 50px;">
    <div class="col-md-8">
        <input type="text" placeholder="Buscar" name="searchString" value="@ViewData["CurrentFilter"]" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-dark" data-toggle="modal" data-target="#exampleModal">Buscar</button>
    </div>
</div>
<div class="row" style="background-color:#FFFFFF; height: 150px;">
    <div class="col-md-4">
        <label>Especialidad:</label>
        <select style="border-radius:5px" ; id="presentado">
            <option>psicologia</option>
            <option>fisioterapia</option>
            <option>radiologia</option>
        </select>
    </div>
    <div class="col-md-4">
        <label>Especialistas:</label>
        <select style=border-radius:5px; name="dependencias" id="dependencias">
            <option>Ricardo Garcia  </option>
            <option>Manuel Moreno</option>
            <option>Luis Sotelo</option>
        </select>
    </div>
</div>
<div class="row" style="background-color:#FFFFFF; height: 800px;">
    <div class="col-md-4">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">No.Exp</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Servicio</th>
                    <th scope="col">Horario</th>
                    <th scope="col">Estado de Cita</th>
                    <th scope="col">Hora Inicio</th>
                    <th scope="col">Hora Fin</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>31010</td>
                    <td>Manuel</td>
                    <td>Primera Vez</td>
                    <td>8:00</td>
                    <td>Citado</td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="col-md-1"></div>
<div class="col-sm-4 ">

</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalles de la Cita</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <span class="glyphicon glyphicon-calendar" style="color:gray"></span>
                </div>
                <br />
                <div>
                    <span class="glyphicon glyphicon-file" style="color:gray"></span>
                </div>
                <br />
                <div>
                    <span class="glyphicon glyphicon-time" style="color:gray"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
